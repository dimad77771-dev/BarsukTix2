@model BarsukTix.Services.DTO.TicketViewModel
@{
    ViewData["Title"] = "Payment";
}

<script type="text/javascript" src="https://secure.myhelcim.com/js/version2.js"></script>

<div class="main" data-bs-spy="scroll" data-bs-target="#navContentmenu" data-bs-root-margin="0px 0px -50%" data-bs-smooth-scroll="true">

    <script type="text/javascript" src="https://secure.myhelcim.com/js/version2.js"></script>

    <!--Contact Section ======================-->
    <section class="contact-section contact-page pt-70 pt-lg-120 pt-xxl-30">
        <div class="container">
            <div class="row gy-20 gy-lg-0 align-items-lg-end justify-content-lg-between mb-30 mb-lg-70">
                <div class="col-lg-5">
                    <div class="section-title section-title-style-2">
                        <span class="fs-3 straight-line-wrapper fw-semibold position-relative"> <span class="straight-line"></span>Buy Ticket</span>
                        <h2 class="title display-3 fw-extra-bold mb-n2 text-opacity">Buy</h2>
                        <h3 class="sub-title display-3 fw-extra-bold primary-text-shadow">Ticket</h3>
                    </div>
                    <!-- section-title -->
                </div>
                <div class="col-lg-5 d-none">
                    <div class="highlights-text">
                        <p class="custom-roboto text-lg-end">
                            Immerse in mesmerizing performances,vibrant soundscapes,and interactive art at our music extravaganza. Experience a festival atmosphere like no other, where unforgettable moments.
                        </p>
                    </div>
                </div>
            </div>
            
            <div class="contact-us-form">
                <form name="helcimForm" id="helcimForm" action="PaymentProcessing" method="POST">
                    <div class="row gx-5 gy-4 gy-lg-5">
                        <div id="helcimResults"></div>
                        <input type="hidden" id="token" value="@Model.HelcimToken">
                        <input type="hidden" id="amountHash" value="@Model.GetAmountHash()">

                        <div class="col-lg-3">
                            <label>
                                Сard Number
                            </label>
                            <input type="text" class="form-control" id="cardNumber" value="">   
                        </div>

                        <div class="col-lg-3">
                            <label>
                                Expiry Month
                            </label>
                            <input type="text" class="form-control" id="cardExpiryMonth" value="">
                        </div>

                        <div class="col-lg-3">
                            <label>
                                Expiry Year
                            </label>
                            <input type="text" class="form-control" id="cardExpiryYear" value="">
                        </div>

                        <div class="col-lg-3">
                            <label>
                                CVV
                            </label>
                            <input type="text" class="form-control" id="cardCVV" value="">
                        </div>

                        <div class="col-lg-3">
                            <label>
                                Card Holder Name
                            </label>
                            <input type="text" class="form-control" id="cardHolderName" value="">
                        </div>

                        <div class="col-lg-3">
                            <label>
                                Address
                            </label>
                            <input type="text" class="form-control" id="cardHolderAddress" value="">
                        </div>

                        <div class="col-lg-3">
                            <label>
                                Postal Code
                            </label>
                            <input type="text" class="form-control" id="cardHolderPostalCode" value="">
                        </div>

                        <div class="col-lg-3">
                            <label>
                                Amount
                            </label>
                            <input type="text" class="form-control" id="amount" value="@Model.GetTotalAmount().ToString("0.00", CultureInfo.InvariantCulture)" readonly>
                        </div>


                        <div class="col-12">
                            <button type="button" class="btn btn-gradient d-inline-flex" aria-label="buttons" onclick="javascript:helcimProcess();">Process</button>
                        </div>
                        <div class="col-12" id="errortext-div">
                            <p class="text-danger">
                                @Model.ErrorText
                            </p>
                        </div>


                    </div>
                    
                </form>
            </div>
            
        </div>
        
    </section>
    <!--Contact Section ======================-->

</div>

